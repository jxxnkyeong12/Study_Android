<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--높이랑 색상을 이니셜_style에 미리 지정해놓고
        불러와서 사용해보기
    -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/notice_tv_width"
        android:layout_height="@dimen/notice_tv_height"
        android:background="@color/kjk_blue"
        android:layout_marginTop="40dp"
        android:text="@string/string_kjk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        style="@style/notice_tv_style"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

<!--textSize만 다르게 나온다-->
    <TextView
        android:id="@+id/textView3"
       style="@style/notice_tv_style2"
        android:layout_marginTop="32dp"
        android:text="스타일"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>